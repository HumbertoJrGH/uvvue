---
interface Props {
	title: string;
}
import Dashboard from "../components/vue/Dashboard.vue";
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<script
	src="https://cdn.jsdelivr.net/gh/google/code-prettify@master/loader/run_prettify.js"
></script>
<style is:global>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	:root {
		--accent: 48, 10, 240;
		--accent-light: 222, 218, 240;
		--accent-dark: 19, 4, 89;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			magenta 60%
		);
	}
	h1 {
		color: white;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	.menu {
		display: flex;
		gap: 1rem;
	}
	.menu a {
		text-decoration: none;
		color: var(--accent);
		font-size: 1.2rem;
		transition: 0.2s;
	}
	.menu a:hover {
		color: rgba(var(--accent));
		font-size: 1.2rem;
	}
</style>
